<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="mainAnchorPane" prefHeight="400.0" prefWidth="640.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.MainController">
    <stylesheets>
        <URL value="@/main/res/main.css" />
    </stylesheets>
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar VBox.vgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#closeWindow" text="Exit" />
                        <MenuItem mnemonicParsing="false" onAction="#refreshRoomsList" text="Refresh" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Room">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#loadAddRoom" text="Add" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Data">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#exportData" text="Export" />
                        <MenuItem mnemonicParsing="false" onAction="#importData" text="Import" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Database">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#truncateDatabaseTables" text="Truncate" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
            <ListView fx:id="roomsListView" prefHeight="400.0" prefWidth="640.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</AnchorPane>
